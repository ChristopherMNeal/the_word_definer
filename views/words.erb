<h1>The Word Definer</h1>

<h3>Words:</h3>
<% if @words.any? %>
  <ul>
    <% @words.each do |each_word| %>
      <li><a href="/words/<%= each_word.id %>"><%= each_word.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no words to display</p>
<% end %>

<a href="/words/new">Add a new word</a>

<form action="/words">
  <div class="form-group">
    <label for="search">Search for a word</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Submit!</button>
</form>

<% @words.each do |each_word| %>
  <li><a href="/words/<%= each_word.id %>"><%= each_word.name %></a></li>
<% end %>