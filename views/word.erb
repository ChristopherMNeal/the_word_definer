<h1>Word: <%= @word.word() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word">Change word</label>
  <input id="word" name="word" type="text">

  <button type="submit">Change</button>
</form>
<a href="/words">Return to word list</a>