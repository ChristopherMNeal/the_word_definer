<h2>Definition: <%= @defi.name %></h2>
<h3>Word: <%= @defi.word.name %></h3>

<form action="/words/<%= @defi.word.id %>/defis/<%= @defi.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Change definition</label>
  <input id="name" name="name" type="text" value="<%= @defi.name %>">

  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @defi.word.id %>/defis/<%= @defi.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @defi.word.id %>">Back to word list</a>